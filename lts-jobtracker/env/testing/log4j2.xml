<?xml version="1.0" encoding="UTF-8"?>
<!-- status=debug 可以查看log4j的装配过程 -->
<Configuration status="off" monitorInterval="1800">
    <Appenders>
        <RollingRandomAccessFile name="file"
                                 fileName="${sys:application.root}/logs/jobtrack.log" filePattern="${sys:application.root}/logs/jobtrack.%d{yyyy-MM-dd}.log"
                                 immediateFlush="false" append="false">
            <PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss} %level [%C:%line]  %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true" />
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="com.shenyun" level="warn" includeLocation="true" additivity="false">
            <AppenderRef ref="file" />
        </AsyncLogger>
        <AsyncLogger name="com.alibaba.dubbo" level="warn" includeLocation="true" additivity="false">
            <AppenderRef ref="file"/>
        </AsyncLogger>
        <AsyncLogger name="io.netty" level="debug" includeLocation="true" additivity="false">
            <AppenderRef ref="file" />
        </AsyncLogger>
        <!-- Root Logger -->
        <Root level="debug" additivity="false">
            <AppenderRef ref="file" />
        </Root>
    </Loggers>
</Configuration>